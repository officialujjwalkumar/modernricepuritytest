  <script>
    function calculateScore() {
      const questions = document.querySelectorAll('input[type="checkbox"]');
      let score = 500;

      questions.forEach((question) => {
        if (question.checked) {
          let x = Math.floor((Math.random() * 15) + 1)
          score -= x;
        }
      });

      const resultDiv = document.getElementById('result');
      resultDiv.innerHTML = `<p>Your Rice Purity Score is: ${score/5}</p>`;

      // Set the result section to display:block after calculating the score
      resultDiv.style.display = 'block';
    }

    function clearForm() {
      const questions = document.querySelectorAll('input[type="checkbox"]');
      questions.forEach((question) => {
        question.checked = false;
      });

      // Hide the result section when clearing the form
      const resultDiv = document.getElementById('result');
      resultDiv.style.display = 'none';
    }
  </script>
